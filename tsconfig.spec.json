{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node",
      "google.maps",
      "lodash"
    ],
    "paths": {
      "@capacitor/*": [
        "__mocks__/@capacitor/*"
      ]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "__mocks__/**/*.ts"
  ],
}